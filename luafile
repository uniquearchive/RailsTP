Tabs.Teleports:AddButton({ Title = "Teleport to End", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/Tptoend.github.io/refs/heads/main/ringta.lua"))() end })

-- CHARACTER
local noclipConnection
local function startNoClip()
    noclipConnection = RunService.Stepped:Connect(function()
        local char = Players.LocalPlayer.Character
        if char then
            for _, part in pairs(char:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    end)
end

local function stopNoClip()
    if noclipConnection then
        noclipConnection:Disconnect()
        noclipConnection = nil
    end
end

Tabs.Character:AddButton({
    Title = "Boost FPS",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/soctrungkien/scriptroblox/refs/heads/main/Script/fpsboost.lua"))()
    end
})

Tabs.Character:AddButton({
    Title = "Highlight Players",
    Callback = function()
        local function addHighlight()
            local player = Players.LocalPlayer
            local char = player.Character
            if not char then return end
            if char:FindFirstChild("PlayerHighlightESP") then return end

            local highlight = Instance.new("Highlight")
            highlight.Name = "PlayerHighlightESP"
            highlight.FillColor = Color3.new(1, 1, 1)
            highlight.OutlineColor = Color3.fromRGB(85, 170, 255)
            highlight.FillTransparency = 1
            highlight.OutlineTransparency = 0
            highlight.Parent = char
        end

        addHighlight()
        Players.LocalPlayer.CharacterAdded:Connect(function()
            task.wait(1)
            addHighlight()
        end)
    end
})

Tabs.Character:AddButton({
    Title = "Get Horse Class [FREE]",
    Callback = function()
        local args = {
            [1] = "Horse"
            }
            game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("RemotePromise"):WaitForChild("Remotes"):WaitForChild("C_BuyClass"):FireServer(unpack(args))
            local args = {
                [1] = "Horse"
            }
            game:GetService("ReplicatedStorage").Shared.RemotePromise.Remotes.C_EquipClass:FireServer(unpack(args))
          --  StarterGui:SetCore("SendNotification", {
          --      Title = "Now you have the class horse.",
           --     Text = "Made by exotusizm",
           --     Duration = 7
          --  })
        end
        
})

Tabs.Character:AddToggle("Noclip", { Title = "Noclip", Default = false }):OnChanged(function(state)
    if state then startNoClip() else stopNoClip() end
end)

Tabs.Character:AddButton({
    Title = "FullBright",
    Callback = function()
        pcall(function()
            Lighting.Ambient = Color3.fromRGB(180, 180, 180)
            Lighting.OutdoorAmbient = Color3.fromRGB(180, 180, 180)
            Lighting.Brightness = 2
            Lighting.ColorShift_Top = Color3.new(0, 0, 0)
            Lighting.ColorShift_Bottom = Color3.new(0, 0, 0)
        end)
    end
})

Tabs.Character:AddButton({
    Title = "Remove Fog",
    Callback = function()
        pcall(function()
            Lighting.FogStart = 1000000
            Lighting.FogEnd = 2000000
            local atmosphere = Lighting:FindFirstChildOfClass("Atmosphere")
            if atmosphere then
                atmosphere.Density = 0
                atmosphere.Offset = 0
                atmosphere.Haze = 0
            end
        end)
    end
})

