
-- KEY SYSTEM (Fluent UI based)
local correctKey = "exotic2025"

local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window_Key = Fluent:CreateWindow({
    Title = "Exotic Hub",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftAlt
})

local KeyTab = Window_Key:AddTab({ Title = "Key", Icon = "lock" })

local userKey = ""
Window_Key:SelectTab(1)

KeyTab:AddInput("KeyInput", {
    Title = "Enter Key",
    Default = "",
    Placeholder = "Key",
    Numeric = false,
    Finished = true,
    Callback = function(value)
        userKey = value
    end
})

KeyTab:AddButton({
    Title = "Submit Key",
    Description = "If",
    Callback = function()
        if userKey == correctKey then
            Fluent:Notify({ Title = "Access Granted", Content = "Correct key. Loading script...", Duration = 4 })

            task.wait(1)
            Window_Key:Destroy() 
            -- MAIN UI + BASE SETUP
            local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
            local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
            local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()
            
            local StarterGui = game:GetService("StarterGui")
            local Lighting = game:GetService("Lighting")
            local RunService = game:GetService("RunService")
            local Players = game:GetService("Players")
            
            local Window = Fluent:CreateWindow({
            Title = "Exotic Hub | 1.4",
          --  SubTitle = "by uniquearchive",
            TabWidth = 160,
            Size = UDim2.fromOffset(580, 460),
            Acrylic = true,
            Theme = "Dark",
            MinimizeKey = Enum.KeyCode.LeftControl
            })
            
            local Tabs = {
            Teleports = Window:AddTab({ Title = "Teleports", Icon = "navigation" }),
            Visuals = Window:AddTab({ Title = "Visuals", Icon = "eye" }),
            Game = Window:AddTab({ Title = "Game", Icon = "gamepad-2"}),
            Scripts = Window:AddTab({ Title = "Scripts", Icon = "terminal" }),
          --  Discord = Window:AddTab({ Title = "Discord", Icon = "message-circle" }),
            Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
            }
            
            -- TELEPORTS
            Tabs.Teleports:AddButton({ Title = "Find Unicorn", Description = "[BETA]", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/unicorn.github.io/refs/heads/main/Test.lua"))() end })
            Tabs.Teleports:AddButton({ Title = "Teleport to Fort", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/Tpfort.github.io/refs/heads/main/Tpfort.lua"))() end })
            Tabs.Teleports:AddButton({ Title = "Teleport to Farm", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/tpfarm.github.io/refs/heads/main/tptofarm.lua"))() end })
            Tabs.Teleports:AddButton({ Title = "Teleport to Bank", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/Tptobank.github.io/refs/heads/main/Banktp.lua"))() end }) 
            Tabs.Teleports:AddButton({ Title = "Teleport to Castle", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/castletpfast.github.io/refs/heads/main/FASTCASTLE.lua"))() end })
            Tabs.Teleports:AddButton({ Title = "Teleport to Sterling", Callback = function()  loadstring(game:HttpGet('https://raw.githubusercontent.com/ringtaa/sterlingnotifcation.github.io/refs/heads/main/Sterling.lua'))() end })
           -- Tabs.Teleports:AddButton({ Title = "Teleport to Tesla [Test]", Description = "You need to click multiple times until it teleports you", Callback = function() loadstring(game:HttpGet(""))() end })
            Tabs.Teleports:AddButton({ Title = "Teleport to Tesla ", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/tptotesla.github.io/refs/heads/main/Tptotesla.lua"))() end })
            Tabs.Teleports:AddButton({ Title = "Teleport to Train", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/train.github.io/refs/heads/main/train.lua"))() end })
            Tabs.Teleports:AddButton({ Title = "Teleport to End", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/Tptoend.github.io/refs/heads/main/ringta.lua"))() end })
            Tabs.Teleports:AddParagraph({ Title = "Credits to ringtaa" })
            
            
            -- === ESP ===
            local espEnabled = false
            local espModule = nil
            local espConfig = {
            Enabled = true,
            MaxDistance = 100,
            Colors = {
                Player = Color3.fromRGB(0, 0, 255),
                NPC = Color3.fromRGB(255, 0, 0),
                Default = Color3.fromRGB(200, 200, 200),
                Corpse = Color3.fromRGB(139, 69, 19),
                Fuel = Color3.fromRGB(255, 165, 0),
                Ammo = Color3.fromRGB(0, 255, 255),
                Weapon = Color3.fromRGB(255, 0, 255),
                Junk = Color3.fromRGB(100, 100, 100),
                Healing = Color3.fromRGB(0, 255, 0),
                Gold = Color3.fromRGB(255, 215, 0),
                Silver = Color3.fromRGB(192, 192, 192),
                Rare = Color3.fromRGB(160, 32, 240)
            }}
            
            
            Tabs.Visuals:AddToggle("ESP", {
            Title = "ESP",
            Default = false
            }):OnChanged(function(state)
            espEnabled = state
            if state then
                local baseUrl = "https://raw.githubusercontent.com/LxckStxp/DeadRails/main/modules/"
                local Utilities = loadstring(game:HttpGet(baseUrl .. "Utilities.lua"))()
                espModule = loadstring(game:HttpGet(baseUrl .. "ESP/ESP.lua"))()(espConfig, Utilities)
                espModule.Initialize()
            else
                if espModule and espModule.Unload then
                    espModule.Unload()
                end
            end
            end)
            
            Tabs.Visuals:AddSlider("ESPDistance", {
            Title = "ESP Distance",
            Default = 100,
            Min = 50,
            Max = 500,
            Rounding = 0
            }):OnChanged(function(value)
            espConfig.MaxDistance = value
            end)
                
            Tabs.Visuals:AddButton({ Title = "ESP Unicorn", Callback = function() pcall(function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/uniesp.github.io/refs/heads/main/esp.lua"))() end) end}) 
            
            Tabs.Visuals:AddToggle("Noclip", { Title = "Noclip", Default = false }):OnChanged(function(state)
            if state then
                noclipConnection = RunService.Stepped:Connect(function()
                    local char = Players.LocalPlayer.Character
                    if char then
                        for _, part in pairs(char:GetDescendants()) do
                            if part:IsA("BasePart") then
                                part.CanCollide = false
                            end
                        end
                    end
                end)
            else
                if noclipConnection then
                    noclipConnection:Disconnect()
                    noclipConnection = nil
                end
            end
            end)

            Tabs.Visuals:AddButton({
            Title = "Free Camera",
            Callback = function()
                pcall(function()
                    loadstring(game:HttpGet("https://raw.githubusercontent.com/GhostPlayer352/Test4/main/Freecam"))()
                end)
            end
            })

            Tabs.Visuals:AddButton({
            Title = "Instant Interact",
            Callback = function()
                local Players = game:GetService("Players")
                local ProximityPromptService = game:GetService("ProximityPromptService")
                -- Make all proximity prompts instantly interact
                ProximityPromptService.PromptShown:Connect(function(prompt)
            	    prompt.HoldDuration = 0 -- Instantly interact when touched
                end)
               end
            })
            
            Tabs.Visuals:AddButton({
               Title = "Max interact",
               Callback = function()
               -- LocalScript (place in StarterPlayer > StarterPlayerScripts)
                local ProximityPromptService = game:GetService("ProximityPromptService")            
                -- Function to max out interaction range for new prompts
                local function upgradePrompt(prompt)
            	    prompt.MaxActivationDistance = 500 -- Adjust as needed (1000 = super far)
                end
                -- Modify all existing prompts in the game
                for _, prompt in pairs(workspace:GetDescendants()) do
                	if prompt:IsA("ProximityPrompt") then
            	    	upgradePrompt(prompt)
            	    end
                end
                -- Apply to future prompts that appear
                ProximityPromptService.PromptShown:Connect(function(prompt)
                	upgradePrompt(prompt)
                end)
               end
            })


            Tabs.Visuals:AddButton({
            Title = "FullBright",
            Callback = function()
                pcall(function()
                    Lighting.Ambient = Color3.fromRGB(180, 180, 180)
                    Lighting.OutdoorAmbient = Color3.fromRGB(180, 180, 180)
                    Lighting.Brightness = 2
                    Lighting.ColorShift_Top = Color3.new(0, 0, 0)
                    Lighting.ColorShift_Bottom = Color3.new(0, 0, 0)
                end)
            end
            })
            
            Tabs.Visuals:AddButton({
            Title = "Remove Fog",
            Callback = function()
                pcall(function()
                    Lighting.FogStart = 1000000
                    Lighting.FogEnd = 2000000
                    local atmosphere = Lighting:FindFirstChildOfClass("Atmosphere")
                    if atmosphere then
                        atmosphere.Density = 0
                        atmosphere.Offset = 0
                        atmosphere.Haze = 0
                    end
                end)
            end
            })
            
            Tabs.Visuals:AddButton({
            Title = "Boost FPS",
            Description = "Very low graphics",
            Callback = function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/soctrungkien/scriptroblox/refs/heads/main/Script/fpsboost.lua"))()
            end
            })

            Tabs.Game:AddButton({
            Title = "Autofarm bonds [OP]",
            Callback = function()
               loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/BETABOND.github.io/refs/heads/main/bondfarm.lua"))()
            end
            })
           -- Tabs.Game:AddButton({ Title = "Autofarm Bonds [2]", Description = "TEST", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/AmareScripts/DeadRails/refs/heads/main/Auto%25BondFarm.lua"))() end })
            Tabs.Game:AddButton({ Title = "Aim Lock", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/Kietba/Kietba/refs/heads/main/Lock%20script%20kibaz"))() end })

            Tabs.Game:AddButton({
            Title = "Get Horse Class [FREE]",
            Callback = function()
                local args = { "Horse" }
                game:GetService("ReplicatedStorage").Shared.RemotePromise.Remotes.C_BuyClass:FireServer(unpack(args))
                game:GetService("ReplicatedStorage").Shared.RemotePromise.Remotes.C_EquipClass:FireServer(unpack(args))
            end
            })
            
            -- SCRIPTS
            Tabs.Scripts:AddButton({ Title = "Teleport Script", Description = "Includes teleport to any village", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ringtaa/deadrailsui.github.io/refs/heads/main/RINGTA.LUA"))() end })
            Tabs.Scripts:AddButton({ Title = "Bypass Teleport", Description = "Credits to Amare Scripts", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/AmareScripts/DeadRails/refs/heads/main/Bypass%25AntiCheat.lua"))() end })
            Tabs.Scripts:AddButton({ Title = "Maxim Gun Fly", Description = "Credits to Amare Scripts", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/AmareScripts/DeadRails/refs/heads/main/FlyV2%25viaTurret.lua"))() end })
            Tabs.Scripts:AddButton({ Title = "Nameless Admin", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/ltseverydayyou/Nameless-Admin/main/Source"))() end })
            Tabs.Scripts:AddButton({ Title = "Vehicle Fly", Callback = function() loadstring(game:HttpGet('https://raw.githubusercontent.com/GhostPlayer352/Test4/refs/heads/main/Vehicle%20Fly%20Gui'))() end })
            Tabs.Scripts:AddButton({ Title = "Null Fire Script", Description = "Includes killaura, autocollect bonds, autobond, no void, esp features and etc." , Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/InfernusScripts/Null-Fire/main/Loader"))() end })
            Tabs.Scripts:AddButton({ Title = "Dex Explorer (Classic)", Callback = function() loadstring(game:HttpGet("https://raw.githubusercontent.com/peyton2465/Dex/master/out.lua"))() end })
            Tabs.Scripts:AddButton({ Title = "Dead Rails [Gumanba]", Description = "Includes unicorn esp, autobond, autocollet bonds, teleports and etc.", Callback = function()  loadstring(game:HttpGet("https://raw.githubusercontent.com/gumanba/Scripts/refs/heads/main/DeadRails"))() end })
            
            -- DISCORD
           -- Tabs.Discord:AddParagraph({ Title = "Join our Discord!", Content = "Get updates, scripts and more." })
            --Tabs.Discord:AddButton({
           -- Title = "Join Discord",
          --  Callback = function()
          --      setclipboard("https://discord.gg/yourinvitehere")
          --      Fluent:Notify({ Title = "Copied!", Content = "Discord invite copied to clipboard.", Duration = 5 })
           -- end
           -- })
            
            -- SETTINGS
            SaveManager:SetLibrary(Fluent)
            InterfaceManager:SetLibrary(Fluent)
            SaveManager:IgnoreThemeSettings()
            SaveManager:SetIgnoreIndexes({})
            InterfaceManager:SetFolder("exotusizmHub")
            SaveManager:SetFolder("exotusizmHub/Game")
            InterfaceManager:BuildInterfaceSection(Tabs.Settings)
            SaveManager:BuildConfigSection(Tabs.Settings)
            
            -- STARTUP -- 
            Window:SelectTab(1)
            Fluent:Notify({ Title = "Exotic Hub Loaded", Content = "Script has been loaded successfully.", Duration = 8 })
            SaveManager:LoadAutoloadConfig()
        else
            Fluent:Notify({ Title = "Access Denied", Content = "Invalid key. Please try again.", Duration = 5 })
        end
    end
})

KeyTab:AddButton({
   Title = "Get key link",
   Callback = function()
        setclipboard("https://direct-link.net/1342112/hub-key")
        Fluent:Notify({ Title = "Copied!", Content = "Paste link into your browser to get key", Duration = 5 })
  end
})
